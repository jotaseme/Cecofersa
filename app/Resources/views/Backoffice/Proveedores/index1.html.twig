{% extends 'Backoffice/PDF/layout.twig' %}

{% block body %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.css" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap-editable/css/bootstrap-editable.css" rel="stylesheet"/>
    <link href="{{ asset("wysihtml5/bootstrap-wysihtml5-0.0.2.css")}}" rel="stylesheet" type="text/css" />
    <body>
    <div id="encabezado-pl" class="col-xs-12" style="padding: 0;">
        <div class="col-xs-3">
            <img class="img-responsive" src="http://www.cecofersa.com/public_html/images/logoCeco.jpg">
        </div>
        <div class="col-xs-9">

            <h1 class="col-xs-10" style="text-align: left"><a href="#" id="nombre-proveedor" class="nombre-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Nombre del proveedor">{{ proveedor.proveedor }}</a></h1>
            <h1 class="col-xs-2" style="text-align: right"><a href="#" id="nif-proveedor" class="nif-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="NIF del proveedor">{{ proveedor.nif }}</a></h1>

            <div class="col-xs-12" style="padding-top: 3px; margin-bottom: 2px;">
                <p>DIRECCIÓN:<a href="#" id="direccion-proveedor" class="direccion-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Dirección del proveedor">{{ proveedor.direccion }}</a></p>
            </div>
            <div class="col-xs-6" style="padding-bottom: 3px">
                <p>POBLACIÓN: <a href="#" id="poblacion-proveedor" class="poblacion-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Población del proveedor">{{ proveedor.poblacion }}</a></p>
                <p>CÓDIGO POSTAL: <a href="#" id="codigoPostal-proveedor" class="codigoPostal-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Código postal del proveedor">{{ proveedor.codigoPostal }}</a></p>
                <p style="margin-bottom: 8px;">PROVINCIA: <a href="#" id="provincia-proveedor" class="provincia-proveedor" data-type="select" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Provincia del proveedor">{{ proveedor.provincia }}</a></p>
                <p>RESPONSABLE:  <a href="#" id="responsable-convenio-proveedor" class="responsable-convenio-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Responsable del convenio">{{ proveedor.responsableConvenio }}</a></p>
                <p style="margin-bottom: 5px;">E-MAIL:  <a href="#" id="email-responsable-convenio-proveedor" class="email-responsable-convenio-proveedor" data-type="email" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Email responsable del convenio">{{ proveedor.emailConvenio }}</a></p>

            </div>
            <div class="col-xs-6" style="padding-bottom: 3px">
                <p>TELÉFONO:<a href="#" id="telefono-proveedor" class="telefono-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Teléfono de contacto">{{ proveedor.telefono }}</a></p>
                <p>FAX: <a href="#" id="fax-proveedor" class="fax-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Fax de contacto">{{ proveedor.fax }}</a></p>
                <p style="margin-bottom: 8px;">PÁGINA WEB: <a href="#" id="pagina-web-proveedor" class="pagina-web-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Página web proveedor">{{ proveedor.paginaWeb }}</a></p>
                <p>CARGO RESP.: <a href="#" id="cargo-responsable-convenio-proveedor" class="cargo-responsable-convenio-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Cargo responsable del convenio del proveedor">{{ proveedor.cargoConvenio }}</a></p>

            </div>
            <div class="col-xs-12 recuadrado" style="padding: 5px 10px;">
                <div class="col-xs-4"><p>CONVENIO:<a href="#" id="convenio-proveedor" class="convenio-proveedor" data-type="text" data-pk="{{ proveedor.idProveedor }}" data-url="{{ path("proveedor_update",{'id_proveedor':proveedor.idProveedor }) }}" data-title="Identificador del convenio de colaboración">{{ proveedor.convenioColaboracion }}</a></p></div>
                <div class="col-xs-4"><p>FECHA: <a href="#">{{ proveedor.fechaConvenio|date("d/m/Y") }}</a></p></div>
                <div class="col-xs-4"><p>VIGENCIA: <a href="#">{{ proveedor.vigencia }}</a></p></div>
            </div>
        </div>
    </div>
    <div id="cuerpo-pl" class="col-xs-12" style="padding: 0; margin-top: 4px;">
        <div class="col-xs-6" style="padding: 0px; height: 450px;">
            <div class="recuadrado" style="padding: 15px; height: 100%; margin: 0 2px 0 0">
                <p>PRECIOS: <a href="#">{{ proveedor.precios }}</a></p>
                <p>IVA: <a href="#">{{ proveedor.IVA }}</a></p>
                <p>DTOS. FACTURA: <a href="#">{{ proveedor.descuentosFactura }}</a></p>
                <p><br></p>
                <p>GESTIÓN CENTRALIZADA: <a href="#">{{ proveedor.gestionCentralizada }}</a></p>
                <p>FORMA DE PAGO: <a href="#">{{ proveedor.formaPago }}</a></p>
                <p>PRONTO PAGO: <a href="#">{{ proveedor.prontoPago }}</a></p>
                <p>PEDIDO MÍNIMO:{{ proveedor.pedidoMinimo }}</p>
                <p><br></p>
                <p style="text-decoration: underline">PORTES PAGADOS:</p>
                <p>PENÍNSULA: <a href="#">{{ proveedor.portesPeninsula }}</a></p>
                <p>PORTUGAL: <a href="#">{{ proveedor.portugal }}</a></p>
                <p>CANARIAS: <a href="#">{{ proveedor.canarias }}</a></p>
                <p>BALEARES: <a href="#">{{ proveedor.baleares }}</a></p>
                <p>CEUTA Y MELILLA: <a href="#">{{ proveedor.ceutaMelilla }}</a></p>
            </div>
        </div>
        <div class="col-xs-6" style="padding: 0px; height: 450px; border-left: none">
            <div class="recuadrado" style="padding: 15px; height: 100%; margin: 0 0 0 2px">
                <p>ARTÍCULOS QUE COMERCIALIZA:</p>
                <p><a href="#">{{ proveedor.articulosComercializa|raw }}</a></p>
            </div>
        </div>

        <div class="recuadrado col-xs-6" style="padding: 15px; height: 225px; border-right: none; margin-top: 4px;">
            <p>RAPPEL CECOFERSA:</p>
            <p><a href="#">{{ proveedor.rappelCecofersa|raw }}</a></p>
        </div>
        <div class="recuadrado col-xs-6" style="padding: 15px; height: 225px; border-left: none; margin-top: 4px;">
            <p>RAPPEL ASOCIADO:</p>
            <p><a href="#">{{ proveedor.rappelAsociado|raw }}</a></p>
        </div>
    </div>
    <div id="cuerpo2-pl" class="col-xs-12" style="padding: 0; margin-top: 4px">
        <div class="col-xs-3" style="height: 315px; padding: 0;">
            <div class="recuadrado" style="height: 100%; margin: 0 2px 0 0; padding: 2px;">
                <img class="img-responsive" src="http://www.cecofersa.com/public_html/images/clausulas.jpg">
            </div>
        </div>
        <div class="col-xs-6" style="height: 315px; padding: 0;">
            <div class="recuadrado" style="padding: 15px; height: 100%; margin: 0 4px 0 2px">
                <p>OBSERVACIONES:</p>
                <div id="comments" data-type="wysihtml5" data-pk="1">{{ proveedor.observaciones|raw }}</div>
            </div>
        </div>
        <div id="publicidad" class="col-xs-3" style="height: 315px; padding: 0;">
            <div class="col-xs-12 recuadrado" style="height: 100%; margin: 0px; padding:0;">
                <div class="col-xs-12" style="padding: 5px 10px; border-bottom: 1px solid black;"><p style="letter-spacing: normal">PARTICIPA EN EXPOCECOFERSA: <a style="line-height: 10px" href="#">
                            {% if proveedor.expocecofersa|upper == 'VERDADERO' %}
                                <img src="http://www.cecofersa.com/public_html/images/checked.png">
                            {% else %}
                                <img src="http://www.cecofersa.com/public_html/images/no-checked.png">
                            {% endif %}
                        </a></p></div>
                <div class="col-xs-12" style="padding: 5px 10px;"><p>PUBLICIDAD: <a href="#">{{ proveedor.publicidad|raw }}</a></p></div>
            </div>
        </div>
    </div>
    <div id="footer-pl" class="col-xs-12" style="padding: 0; margin-top: 10px">
        <div class="col-xs-4" style="height: 100px; padding: 0;">
            <div class="recuadrado" style="height: 100%; margin: 0 2px 0 0; padding: 2px;">
                <img class="img-responsive" src="http://www.cecofersa.com/public_html/images/leydatos.jpg">
            </div>
        </div>
        <div class="col-xs-4" style="height: 100px; padding: 0;">
            <div class="recuadrado" style="height: 100%; margin: 0 2px 0 0; padding: 10px;">
                <p>Por CECOFERSA:</p>
            </div>
        </div>
        <div class="col-xs-4" style="height: 100px; padding: 0;">
            <div class="recuadrado" style="height: 100%; margin: 0; padding: 10px;">
                <p>Por el PROVEEDOR:</p>
            </div>
        </div>
    </div>
    </body>
{% endblock %}


