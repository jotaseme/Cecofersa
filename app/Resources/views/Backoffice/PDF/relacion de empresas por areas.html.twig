{% extends 'Backoffice/PDF/layout.twig' %}
{% block body %}
    <body class="skin-red-light">
        <div class="content-wrapper">
            <div class="content-header">
                <div>
                    <div class="col-xs-6" style="text-align: left">
                        <img style="width: 150px; height: auto; margin-top: 30px;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_aniversario.jpg" alt="CecofersaAniversario">
                    </div>
                    <div class="col-xs-6" style="text-align: right">
                        <img style="width: 400px; height: auto;" src="http://www.cecofersa.com/uploads/img_corporativa/ardilla_informe.jpg" alt="CecofersaArdilla">
                    </div>
                </div>
                <div class="col-xs-12" style="text-align: center">
                    <img style="width: 550px; height: auto;" src="http://www.cecofersa.com/uploads/img_corporativa/Relacion empresas asociadas por areas georaficas.jpg" alt="AsociadosArea">
                    <img style="width: 470px; height: auto; margin-top: 30px;  margin-bottom: 90px;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
                </div>

                <br/>

                <footer style="page-break-after: always;"></footer>
            </div>
            <div class="col-xs-push-4" style="text-align: right">
                <img style="width: 105px; height: auto; margin: 5px 0;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
            </div>
            <div id="asociadosEs" class="content-header">
                <h1>ESPAÑA</h1>
            </div>
            <div id="asociadosEsContent">
                {% set comunidad = 'comunidad' %}
                {% set provincia = 'provincia' %}
                {% for asociado in asociadosES %}

                    {#Comprobamos que no ha cambiado la CA y en caso de hacerlo metemos título#}
                    {% if comunidad != asociado.comunidadAutonoma|upper %}
                        {% set comunidad = asociado.comunidadAutonoma|upper %}
                        {% if comunidad == 'MADRID' or comunidad == 'CASTILLA LA MANCHA' or comunidad == 'COMUNIDAD VALENCIANA'%}
                            <footer style="page-break-after: always;"></footer>
                            <div class="col-xs-push-4" style="text-align: right">
                                <img style="width: 105px; height: auto; margin: 5px 0;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
                            </div>
                        {% endif %}
                        <div class="titulo-comunidad"><h2>{{ asociado.comunidadAutonoma|upper }}</h2></div>
                    {% endif %}

                    {#Comprobamos que no ha cambiado la provincia y en caso de hacerlo metemos subtítulo#}
                    {% if provincia != asociado.provincia|upper %}
                        {% set provincia = asociado.provincia|upper %}
                        <div class="titulo-provincia"><h3>{{ asociado.provincia|upper }}</h3></div>
                    {% endif %}

                    {#Sacamos lista de los asociados de esa provincia#}
                    <div class="nombre-asociado">{{ asociado.nombre|upper }}</div>

                {% endfor %}
            </div>
            <footer style="page-break-after: always;"></footer>
            <div class="col-xs-push-4" style="text-align: right">
                <img style="width: 105px; height: auto; margin: 5px 0;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
            </div>
            <div id="asociadosPt" class="content-header">
                <h1>PORTUGAL</h1>
            </div>
            <div id="asociadosPtContent">
                {% set provincia = 'provincia' %}
                {% set counter = 0 %}
                {% for asociado in asociadosPT %}
                    {#Comprobamos que no ha cambiado la provincia y en caso de hacerlo metemos subtítulo#}
                    {% if provincia != asociado.provincia|upper %}
                        {% set provincia = asociado.provincia|upper %}
                        {% if counter == 12 %}
                            {% set counter = 0 %}
                            <footer style="page-break-after: always;"></footer>
                            <div class="col-xs-push-4" style="text-align: right">
                                <img style="width: 105px; height: auto; margin: 5px 0;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
                            </div>
                        {% endif %}
                        {% set counter = counter + 1 %}
                        <div id="titulo-provincia"><h3>{{ asociado.provincia|upper }}</h3></div>
                    {% endif %}

                    {#Sacamos lista de los asociados de esa provincia#}
                    <div class="nombre-asociado">{{ asociado.nombre|upper }}</div>
                {% endfor %}
            </div>
        </div>
    </body>
{% endblock %}