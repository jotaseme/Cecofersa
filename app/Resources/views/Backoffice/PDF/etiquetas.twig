{% extends 'Backoffice/PDF/layout.twig' %}
{% block body %}
    <body class="skin-red-light">
    <div class="content-wrapper">
        <section class="content-header">
            <div style="text-align: center">
                <img style="width: 470px; height: auto; margin-top: 130px;  margin-bottom: 90px;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
                <br/>
                <h1 style="font-size: 100px">RELACION</h1>
                <h1 style="font-size: 100px">DE</h1>
                <h1 style="font-size: 100px; margin-bottom: 240px;">EMPRESAS</h1>
            </div>

            <br/>
            <h4>CENTRAL DE COMPRAS Y SERVICIOS PROFESIONALES, S.A.</h4>
            <div class="col-xs-12">
                <div class="col-xs-5">
                    Avd. Valdelaparra, 39<br/>
                    Naves D y E - Pol. Ind. de Alcobendas. 28108 ALCOBENDAS (Madrid)<br/>
                    Tel.: +34 91 662 24 15 Fax.: +34 91 661 48  51<br/>
                    E-mail: info@cecofersa.com <br/>
                    <a href="http://www.cecofersa.com">www.cecofersa.com</a>

                </div>
                <div class="col-xs-12">

                    <div class="col-xs-6 col-xs-offset-6" style="text-align: right">
                        {{ "now"|date("d/m/Y H:i:s") }}
                    </div>
                </div>


            </div>

            <footer style="page-break-after: always;">
            </footer>
        </section>
        <div class="col-xs-push-4" style="text-align: right">
            <img style="width: 105px; height: auto; margin-bottom: 5px;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
        </div>
        {% set counter = 0 %}
        {% for asociado in asociados %}
            {% if (counter + asociado.direcciones|length+1)<=18 %}
            {% set counter = counter + 1 %}

        <section class="content-header">
            <div class="clearfix"></div>
            <ol class="breadcrumb" style="height: 60px;padding: 0px 0px;">
                <div class="col-xs-12">
                    <div class="col-xs-10"><h4 style="color:#e84c3d">{{ asociado.nombre }}</h4></div>
                    <div class="col-xs-2"><p style="float: right">{{ asociado.nif }}</p></div>
                </div>

                <div class="col-xs-12">
                    <div class="col-xs-4"><p>{{ asociado.contacto }}</p></div>
                    <div class="col-xs-4" style="text-align: center"><p>{{ asociado.email }}</p></div>
                    <div class="col-xs-4" style="text-align: right"><p><a href="http://{{ asociado.pagWeb }}">{{ asociado.pagWeb }}</a></p></div>
                </div>
                <div class="clearfix"></div>
            </ol>
        </section>
        <section class="content">
            {% for direccion in asociado.direcciones  %}
                {% if direccion.privado == 'FALSO' %}
                {% set counter = counter + 1 %}
                <div class="col-xs-12" style="border-bottom: 1px dashed grey">
                    <div class="col-xs-9">
                        <div class="col-xs-12">
                            {{ direccion.domicilio }}
                        </div>
                        <div class="col-xs-6">
                            <p>{{ direccion.codigoPostal }} {{ direccion.poblacion }}</p>
                        </div>
                        <div class="col-xs-6" style="text-align: center">
                            <p>{{ direccion.provincia }}</p>
                        </div>
                    </div>
                    <div class="col-xs-3" style="text-align: right">
                        <div class="col-xs-12">
                            <b>TEL:</b> {{ direccion.telefono }}
                        </div>
                        <div class="col-xs-12">
                            {% if (direccion.fax is not empty) %}
                                <b>FAX:</b> {{ direccion.fax }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            <div class="clearfix"></div>
            {% endif %}
            {% endfor %}
        </section>
        {% else %}
                {% set counter = 1 %}
                <footer style="page-break-after: always;">
                </footer>
            <div class="col-xs-push-4" style="text-align: right">
                <img style="width: 105px; height: auto; margin-bottom: 5px;" src="http://www.cecofersa.com/uploads/img_corporativa/logo_cecofersa.jpg" alt="Cecofersa">
            </div>
            <section class="content-header">
                <div class="clearfix"></div>
                <ol class="breadcrumb" style="height: 60px;padding: 0px 0px;">
                    <div class="col-xs-12">
                        <div class="col-xs-10"><h4 style="color:#e84c3d">{{ asociado.nombre }}</h4></div>
                        <div class="col-xs-2"><p style="float: right">{{ asociado.nif }}</p></div>
                    </div>

                    <div class="col-xs-12">
                        <div class="col-xs-4"><p>{{ asociado.contacto }}</p></div>
                        <div class="col-xs-4"  style="text-align: center"><p>{{ asociado.email }}</p></div>

                    </div>
                    <div class="clearfix"></div>
                </ol>
            </section>
            <section class="content">
                {% for direccion in asociado.direcciones  %}
                {% if direccion.privado == 'FALSO' %}
                    {% set counter = counter + 1 %}
                    <div class="col-xs-12" style="border-bottom: 1px dashed grey">
                        <div class="col-xs-9">
                            <div class="col-xs-12">
                                {{ direccion.domicilio }}
                            </div>
                            <div class="col-xs-6">
                                <p>{{ direccion.codigoPostal }} {{ direccion.poblacion }}</p>
                            </div>
                            <div class="col-xs-6" style="text-align: center">
                                <p>{{ direccion.provincia }}</p>
                            </div>
                        </div>

                        <div class="col-xs-3" style="text-align: right">
                            <div class="col-xs-12">
                                <b>TEL:</b> {{ direccion.telefono }}
                            </div>
                            <div class="col-xs-12">
                                {% if (direccion.fax is not empty) %}
                                <b>FAX:</b> {{ direccion.fax }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                {% endif %}
                {% endfor %}
            </section>
        {% endif %}
        {% endfor %}
    </div>
    </body>
{% endblock %}
